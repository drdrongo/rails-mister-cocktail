<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div class="navbar-cocktail">
  <div class="navbar-links">
    <%= link_to cocktails_path do %>
      <i class="fas fa-glass-martini-alt"></i>
    <% end %>
  </div>


  <!-- "Hamburger menu" / "Bar icon" to toggle the navigation links -->
  <a href="javascript:void(0);" class="icon" id="hamburger">
    <i class="fa fa-bars"></i>
  </a>
</div>

<div id="myLinks">
  <%= link_to 'Home', root_path %>
  <%= link_to 'Contact', contact_path %>
  <%= link_to 'New Cocktail', new_cocktail_path %>
</div>

<script>
  const hamburger = () => {
    let x = document.getElementById("myLinks");
    if (x.style.display === "flex") {
      x.style.display = "none";
    } else {
      x.style.display = "flex";
    }
  };

  document.getElementById("hamburger").addEventListener("click", hamburger)
</script>