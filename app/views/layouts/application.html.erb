<!DOCTYPE html>
<html>
  <head>
    <title>Spirits Journey</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <meta name="description" content="Find your new favorite drink">
  </head>

  <body>
    <div class="navbar navbar-expand-sm navbar-lewagon">
      <a class="navbar-brand" href="/">
        <i class="fas fa-glass-martini-alt"></i>
      </a>

      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <%= link_to "Home", cocktails_path %>
        </li>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      </ul>
    </div>
    <%= yield %>

    <div class="footer">
      <h2>Follow me</h2>
      <ul class="list-inline">
        <li><a href="instagram.com" class="btn-white social-link"><i class="fab fa-instagram">         </i></a></li>
        <li><a href="github.com" class="btn-white social-link"><i class="fab fa-github-square">     </i></a></li>
        <li><a href="facebook.com" class="btn-white social-link"><i class="fab fa-facebook-square">   </i></a></li>
      </ul>
    </div>
  </body>
</html>
