<div class="container-cocktail" style="
  <% if @cocktail.photo.attached? %>
    background: -webkit-linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)), url(<%="https://res.cloudinary.com/hayatocloud/image/upload/#{@cocktail.photo.key}"%>);
    background: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)), url(<%="https://res.cloudinary.com/hayatocloud/image/upload/#{@cocktail.photo.key}"%>);
  <% end %>
  margin-bottom: 100px;
  background-size: cover;
  background-position: center;
  ">
  <div class="container-doses">
    <h1 style="font-size: 80px;"> <%= @cocktail.name %> </h1>
    <% @doses.each do |dose| %>
      <h2>
        <%= "#{dose.description} #{dose.ingredient.name}" %>
        <span class="dose-options">
          <%= link_to dose_path(dose), method: :delete, data: {confirm: 'Delete this ingredient?'} do %>
            <i class="fas fa-trash text-light"></i>
          <% end %>
        </span>
      </h2>
    <% end %>

    <%= render 'doses/form', cocktail: @cocktail, dose: @dose %>
  </div>
</div>
