<head>
  <title>Spirits Journey</title>
  <meta name="description" content="Find your new favorite drink">
</head>

<body>



  <div class="container-fluid mb-3">

    <div id="carousel-main" class="carousel slide" data-ride="carousel">

      <div class="carousel-form">
        <h1 style="color: white; font-weight: bold; text-shadow: 1px 1px grey;">Take your Spirits Journey</h1>
        <%= form_tag cocktails_path, class: 'carousel-search-bar', method: :get do %>
          <%= text_field_tag :query, params[:query], class: "search-box p-1", id: "banner-typed-text" %>
          <%= submit_tag "Search", name: nil, class: "btn btn-warning" %>
        <% end %>
        <h5>-- or --</h5>

        <%= link_to 'create your own', new_cocktail_path, class: "btn btn-blue my-3" %>
      </div>


      <ol class="carousel-indicators">
        <li data-target="#carousel-main" data-slide-to="0" class="active"></li>
        <li data-target="#carousel-main" data-slide-to="1"></li>
        <li data-target="#carousel-main" data-slide-to="2"></li>
      </ol>

      <div class="carousel-inner">
        <div class="carousel-item active">
          <%= image_tag("cocktail_1.jpg", class: "d-block w-100", alt: "First slide") %>
        </div>
        <div class="carousel-item">
          <%= image_tag("cocktail_2.jpg", class: "d-block w-100", alt: "Second slide") %>
        </div>
        <div class="carousel-item">
          <%= image_tag("cocktail_3.jpg", class: "d-block w-100", alt: "Third slide") %>
        </div>
      </div>

      <div class="carousel-controls">
        <a class="carousel-control-prev" href="#carousel-main" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carousel-main" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="drink-cards-container">
      <% @cocktails.each do |cocktail| %>
        <%= link_to cocktail_path(cocktail), class: "drink-card", :action => 'go' do %>
            <div class="drink-card-body">
              <h2><%=cocktail.name%></h2>
            </div>
            <% if cocktail.photo.attached? %>
              <%= cl_image_tag(cocktail.photo.key, width: 500, height: 500, crop: "fit")  %>
            <% else %>
              <%= image_tag 'no_image.png' %>
            <% end %>
        <% end %>
      <% end %>
    </div>
  </div>

</body>
